<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1E293B" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#2563EB" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#334155" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- Исправлено: используем шестнадцатеричный формат для прозрачности -->
            <solid android:color="#00000000" />
            <corners android:radius="12dp" />
            <!-- Добавляем границу для видимости в обычном состоянии -->
            <stroke
                android:width="1dp"
                android:color="#334155" />
        </shape>
    </item>
</selector>