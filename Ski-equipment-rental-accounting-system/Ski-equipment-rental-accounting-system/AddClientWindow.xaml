<Window x:Class="Ski_equipment_rental_accounting_system.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="➕ Добавить клиента" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Width">

    <Window.Resources>
        <!-- Стили -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,12,10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,0,10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10,0,10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#0F172A"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Основной контейнер с прокруткой -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      PanningMode="VerticalOnly">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0"
                        Background="#2563EB" 
                        CornerRadius="10" 
                        Margin="0,0,0,20">
                    <TextBlock Text="➕ ДОБАВИТЬ КЛИЕНТА" 
                              Foreground="White" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Padding="20,15"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- ФОРМА ВВОДА -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <!-- Фамилия -->
                    <TextBlock Text="Фамилия:*"/>
                    <TextBox x:Name="txtLastName" 
                            MaxLength="50"
                            ToolTip="Введите фамилию клиента"/>

                    <!-- Имя -->
                    <TextBlock Text="Имя:*"/>
                    <TextBox x:Name="txtFirstName" 
                            MaxLength="50"
                            ToolTip="Введите имя клиента"/>

                    <!-- Отчество -->
                    <TextBlock Text="Отчество:*"/>
                    <TextBox x:Name="txtSecondName" 
                            MaxLength="50"
                            ToolTip="Введите отчество клиента"/>

                    <!-- Тип документа -->
                    <TextBlock Text="Тип документа:*"/>
                    <ComboBox x:Name="cmbDocumentType" 
                             DisplayMemberPath="Value"
                             SelectedValuePath="Key"
                             ToolTip="Выберите тип документа"/>

                    <!-- Номер документа -->
                    <TextBlock Text="Номер документа:*"/>
                    <TextBox x:Name="txtDocumentNumber" 
                            MaxLength="50"
                            ToolTip="Введите номер документа"/>

                    <!-- Телефон -->
                    <TextBlock Text="Телефон:">
                        <TextBlock.ToolTip>
                            <TextBlock>Введите телефон в формате +7 (XXX) XXX-XX-XX<LineBreak/>Поле не обязательно для заполнения</TextBlock>
                        </TextBlock.ToolTip>
                    </TextBlock>
                    <TextBox x:Name="txtPhoneNumber" 
                            MaxLength="20"
                            ToolTip="Введите телефон"/>

                    <!-- Подсказка -->
                    <Border Background="#F1F5F9" 
                            CornerRadius="8" 
                            Margin="10,20,10,0"
                            Padding="12">
                        <TextBlock Text="* — обязательные поля для заполнения" 
                                  Foreground="#64748B" 
                                  FontSize="12"
                                  FontStyle="Italic"
                                  TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>

                <!-- КНОПКИ -->
                <Border Grid.Row="2" 
                        Background="#F8FAFC" 
                        CornerRadius="10"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button x:Name="btnCancel" 
                               Content="ОТМЕНА" 
                               Background="#EF4444" 
                               Foreground="White"
                               Click="btnCancel_Click"
                               Width="120"
                               ToolTip="Закрыть окно без сохранения">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                                        Background="{TemplateBinding Background}" 
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnSave" 
                               Content="СОХРАНИТЬ" 
                               Background="#10B981" 
                               Foreground="White"
                               Click="btnSave_Click"
                               Width="120"
                               Margin="10,0,0,0"
                               ToolTip="Сохранить клиента в базу данных">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                                        Background="{TemplateBinding Background}" 
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"
                                                                      Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#059669"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>