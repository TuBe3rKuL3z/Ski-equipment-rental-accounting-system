<Window x:Class="Ski_equipment_rental_accounting_system.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="➕ Добавить оборудование" 
        Height="700" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стили -->
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,12,10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10,0,10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="10,0,10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0"
                        Background="#2563EB" 
                        CornerRadius="10" 
                        Margin="0,0,0,20">
                    <TextBlock Text="➕ НОВОЕ ОБОРУДОВАНИЕ" 
                              Foreground="White" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Padding="20,15"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- ФОРМА ВВОДА -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <!-- Инвентарный номер -->
                    <TextBlock Text="Инвентарный номер:*"/>
                    <TextBox x:Name="txtInventoryNumber" 
                            MaxLength="50"
                            ToolTip="Уникальный инвентарный номер"/>

                    <!-- Тип оборудования -->
                    <TextBlock Text="Тип оборудования:*"/>
                    <ComboBox x:Name="cmbEquipmentType" 
                             DisplayMemberPath="Value"
                             SelectedValuePath="Key"
                             ToolTip="Выберите тип снаряжения"/>

                    <!-- Размер/ростовка -->
                    <TextBlock Text="Размер/ростовка:*"/>
                    <TextBox x:Name="txtSize" 
                            MaxLength="20"
                            ToolTip="Например: 180cm, 42, M, L"/>

                    <!-- Бренд -->
                    <TextBlock Text="Бренд:*"/>
                    <TextBox x:Name="txtBrand" 
                            MaxLength="50"
                            ToolTip="Производитель оборудования"/>

                    <!-- Модель -->
                    <TextBlock Text="Модель:*"/>
                    <TextBox x:Name="txtModel" 
                            MaxLength="50"
                            ToolTip="Модель оборудования"/>

                    <!-- Стоимость аренды в сутки -->
                    <TextBlock Text="Стоимость аренды в сутки (₽):*"/>
                    <TextBox x:Name="txtDailyPrice" 
                            MaxLength="10"
                            ToolTip="Цена за день аренды"
                            PreviewTextInput="NumberValidationTextBox"/>

                    <!-- Статус -->
                    <TextBlock Text="Статус:*"/>
                    <ComboBox x:Name="cmbStatus" 
                             DisplayMemberPath="Value"
                             SelectedValuePath="Key"
                             ToolTip="Текущий статус оборудования"/>

                    <!-- Изображение (опционально) -->
                    <Border Margin="10,20,10,10" 
                            Padding="15"
                            Background="#F8FAFC">
                        <StackPanel>
                            <TextBlock Text="Изображение оборудования" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,10"/>

                            <Button x:Name="btnSelectImage" 
                                   Content="📷 ВЫБРАТЬ ИЗОБРАЖЕНИЕ" 
                                   Background="#3B82F6" 
                                   Foreground="White"
                                   Padding="15,10"
                                   Click="btnSelectImage_Click"/>

                            <TextBlock x:Name="txtImageInfo" 
                                      Text="Изображение не выбрано" 
                                      Foreground="#64748B"
                                      FontSize="12"
                                      Margin="0,10,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Подсказка -->
                    <Border Background="#F1F5F9" 
                            CornerRadius="8" 
                            Margin="10,20,10,0"
                            Padding="12">
                        <TextBlock Text="* — обязательные поля для заполнения" 
                                  Foreground="#64748B" 
                                  FontSize="12"
                                  FontStyle="Italic"/>
                    </Border>
                </StackPanel>

                <!-- КНОПКИ -->
                <Border Grid.Row="2" 
                        Background="#F8FAFC" 
                        CornerRadius="10"
                        Padding="10">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button x:Name="btnCancel" 
                               Content="ОТМЕНА" 
                               Background="#EF4444" 
                               Foreground="White"
                               Click="btnCancel_Click"
                               Width="120"/>

                        <Button x:Name="btnSave" 
                               Content="СОХРАНИТЬ" 
                               Background="#10B981" 
                               Foreground="White"
                               Click="btnSave_Click"
                               Width="120"
                               Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>