<Window x:Class="Ski_equipment_rental_accounting_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ski_equipment_rental_accounting_system"
        mc:Ignorable="d"
        Title="🎿 SkiRent Pro • Прокат горнолыжного снаряжения" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E3A8A">

    <Window.Resources>
        <!-- ОБНОВЛЕННАЯ ЦВЕТОВАЯ СХЕМА -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryLightColor" Color="#60A5FA"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#0F172A"/>
        <SolidColorBrush x:Key="SecondaryLightColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="SecondaryDarkColor" Color="#020617"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentGreenDark" Color="#059669"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentOrangeDark" Color="#D97706"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextDark" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextLight" Color="#64748B"/>
        <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF"/>

        <!-- ГРАДИЕНТЫ ДЛЯ КНОПОК -->
        <LinearGradientBrush x:Key="GreenGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#10B981" Offset="0"/>
            <GradientStop Color="#059669" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="OrangeGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F59E0B" Offset="0"/>
            <GradientStop Color="#D97706" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#3B82F6" Offset="0"/>
            <GradientStop Color="#1D4ED8" Offset="1"/>
        </LinearGradientBrush>

        <!-- СТИЛЬ ДЛЯ КНОПОК НАВИГАЦИИ -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="40,35"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <Grid>
                                <Rectangle x:Name="activeIndicator" 
                                           Width="8" 
                                           HorizontalAlignment="Left" 
                                           Fill="Transparent"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E293B"/>
                                <Setter TargetName="activeIndicator" Property="Fill" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ДЛЯ АКТИВНОЙ КНОПКИ НАВИГАЦИИ -->
        <Style x:Key="NavButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <Grid>
                                <Rectangle x:Name="activeIndicator" 
                                           Width="8" 
                                           HorizontalAlignment="Left" 
                                           Fill="#3B82F6"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ ДЛЯ КНОПОК БЫСТРОГО ДЕЙСТВИЯ -->
        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="50,40"/>
            <Setter Property="FontSize" Value="38"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- СТИЛЬ ДЛЯ КАРТОЧЕК -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- СТИЛЬ ДЛЯ ЗАГОЛОВКОВ -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
        </Style>

        <!-- СТИЛЬ ДЛЯ СТАТУС-БАРА -->
        <Style x:Key="StatusBarStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SecondaryDarkColor}"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>

        <!-- СТИЛЬ ДЛЯ SCROLLBAR -->
        <Style x:Key="ScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Background="#4B5563" 
                                           BorderThickness="0" 
                                           Margin="0,2,0,2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- ОСНОВНОЙ КОНТЕЙНЕР -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель (статус-бар) -->
            <RowDefinition Height="*"/>
            <!-- Основное содержимое -->
            <RowDefinition Height="180"/>
            <!-- Нижняя панель быстрых действий -->
        </Grid.RowDefinitions>

        <!-- ВЕРХНИЙ СТАТУС-БАР -->
        <Border Grid.Row="0" 
                Style="{StaticResource StatusBarStyle}" 
                Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- НАЗВАНИЕ И ТЕКУЩИЙ РАЗДЕЛ -->
                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryColor}" 
                            CornerRadius="12" 
                            Width="60" 
                            Height="60"
                            Margin="0,0,20,0">
                        <TextBlock Text="🎿" 
                                   FontSize="36"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="SKIRENT PRO" 
                                   Foreground="White" 
                                   FontSize="28"
                                   FontWeight="Bold"
                                   FontFamily="Segoe UI"/>
                        <TextBlock x:Name="txtCurrentSection" 
                                   Text="Главная" 
                                   Foreground="#94A3B8" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- ИНФОРМАЦИЯ О СИСТЕМЕ И ПОЛЬЗОВАТЕЛЕ -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <!-- СТАТУС СИСТЕМЫ -->
                    <Border Background="#1E293B" 
                            CornerRadius="10" 
                            Padding="20,15"
                            Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" 
                                     Height="12" 
                                     Fill="{StaticResource AccentGreen}" 
                                     Margin="0,0,12,0"
                                     VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="СИСТЕМА АКТИВНА" 
                                           Foreground="#E2E8F0" 
                                           FontSize="14"
                                           FontWeight="Bold"/>
                                <TextBlock x:Name="txtCurrentTime" 
                                           Text="14:30:45" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <!-- НОВЫЕ КНОПКИ -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <Button x:Name="btnSettings" 
                Content="⚙️" 
                Width="50" 
                Height="50"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#94A3B8"
                FontSize="20"
                ToolTip="Настройки"
                Click="btnSettings_Click"
                Cursor="Hand"
                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                        Background="Transparent" 
                                        CornerRadius="25"
                                        Width="50" 
                                        Height="50">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#1E293B"/>
                                                        <Setter Property="Foreground" Value="#3B82F6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="btnDeleteRow" 
                Content="🗑️" 
                Width="50" 
                Height="50"
                Background="Transparent"
                BorderThickness="0"
                Foreground="#EF4444"
                FontSize="20"
                ToolTip="Удалить выбранное"
                Click="btnDeleteRow_Click"
                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                        Background="Transparent" 
                                        CornerRadius="25"
                                        Width="50" 
                                        Height="50">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#1E293B"/>
                                                        <Setter Property="Foreground" Value="#DC2626"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- ПОЛЬЗОВАТЕЛЬ -->
                    <Border Background="#1E293B" 
                            CornerRadius="10" 
                            Padding="20,15">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="{StaticResource PrimaryColor}" 
                                    Width="40" 
                                    Height="40"
                                    CornerRadius="20"
                                    >
                                <TextBlock Text="ИИ" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Margin="15,0,0,0">
                                <TextBlock Text="Иван Иванов" 
                                           Foreground="White" 
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Оператор проката" 
                                           Foreground="#94A3B8" 
                                           FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ОСНОВНОЕ СОДЕРЖИМОЕ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <!-- ЛЕВАЯ ПАНЕЛЬ НАВИГАЦИИ -->
                <ColumnDefinition Width="*"/>
                <!-- ЦЕНТРАЛЬНАЯ ОБЛАСТЬ -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ ПАНЕЛЬ НАВИГАЦИИ С ПРОКРУТКОЙ -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SecondaryColor}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              PanningMode="VerticalOnly"
                              VerticalAlignment="Stretch">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarStyle}"/>
                    </ScrollViewer.Resources>

                    <StackPanel Margin="0,40,0,0">
                        <!-- ЗАГОЛОВОК МЕНЮ -->
                        <TextBlock Text="ОСНОВНОЕ МЕНЮ" 
                                   Foreground="#64748B" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="40,0,0,30"
                                   FontFamily="Segoe UI"/>

                        <!-- КНОПКИ НАВИГАЦИИ -->
                        <Button x:Name="btnRentals" 
                                Height="120"
                                Content="⛷️  АРЕНДЫ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Rentals" 
                                Click="btnRentals_Click"/>

                        <Button x:Name="btnBookings" 
                                Height="120"
                                Content="📅  БРОНИРОВАНИЯ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Bookings" 
                                Click="btnBookings_Click"/>

                        <Button x:Name="btnClients" 
                                Height="120"
                                Content="👥  КЛИЕНТЫ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Clients" 
                                Click="btnClients_Click"/>

                        <Button x:Name="btnMaintenance" 
                                Height="120"
                                Content="🔧  ОБСЛУЖИВАНИЕ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Maintenance" 
                                Click="btnMaintenance_Click"/>
                        <Button x:Name="btnEquipment" 
                                Height="120"
                                Content="#  ОБОРУДОВАНИЕ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Maintenance" 
                                Click="btnEquipment_Click"/>      

                        <!-- ДОПОЛНИТЕЛЬНЫЕ РАЗДЕЛЫ (если нужно будет добавить) -->
                        <!--
                        <Button x:Name="btnEquipment" 
                                Height="120"
                                Content="🎿  СНАРЯЖЕНИЕ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Equipment" 
                                Click="btnEquipment_Click"/>
                        
                        <Button x:Name="btnReports" 
                                Height="120"
                                Content="📈  ОТЧЕТЫ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Reports" 
                                Click="btnReports_Click"/>
                        
                        <Button x:Name="btnSettings" 
                                Height="120"
                                Content="⚙️  НАСТРОЙКИ"
                                Style="{StaticResource NavButtonStyle}"
                                Tag="Settings" 
                                Click="btnSettings_Click"/>
                        -->

                        <!-- СТАТИСТИКА ВНИЗУ -->
                        <Border Style="{StaticResource CardStyle}" 
                                Margin="40,60,40,40"
                                Background="#1E293B">
                            <StackPanel>
                                <TextBlock Text="📈 СЕГОДНЯ" 
                                           Foreground="#94A3B8" 
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,15"/>

                                <StackPanel Orientation="Horizontal" 
                                           Margin="0,0,0,10">
                                    <TextBlock Text="Аренд:" 
                                               Foreground="#E2E8F0" 
                                               FontSize="15"/>
                                    <TextBlock Text="24" 
                                               Foreground="{StaticResource PrimaryLightColor}" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="10,0,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" 
                                           Margin="0,0,0,10">
                                    <TextBlock Text="Выручка:" 
                                               Foreground="#E2E8F0" 
                                               FontSize="15"/>
                                    <TextBlock Text="42 800 ₽" 
                                               Foreground="{StaticResource AccentGreen}" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="10,0,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Свободно:" 
                                               Foreground="#E2E8F0" 
                                               FontSize="15"/>
                                    <TextBlock Text="85%" 
                                               Foreground="{StaticResource PrimaryLightColor}" 
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ДОПОЛНИТЕЛЬНАЯ ИНФОРМАЦИЯ (если нужно) -->
                        <Border Background="#1E293B" 
                                Margin="40,0,40,40"
                                CornerRadius="15"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="ℹ️ СОВЕТ" 
                                           Foreground="#94A3B8" 
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="Используйте свайпы вверх/вниз для прокрутки меню на планшете" 
                                           Foreground="#CBD5E1" 
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ЦЕНТРАЛЬНАЯ ОБЛАСТЬ КОНТЕНТА -->
            <Border Grid.Column="1" 
                    Background="{StaticResource BackgroundLight}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="40">
                    <!-- ОБЛАСТЬ ДЛЯ ДИНАМИЧЕСКОЙ ЗАМЕНЫ КОНТЕНТА -->
                    <ContentControl x:Name="ContentArea">
                                <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        MaxWidth="800">
                            <Border Background="White" 
                                    CornerRadius="30" 
                                    Width="600" 
                                    Height="350"
                                    Margin="0,0,0,40">
                                <DataGrid x:Name="dataGrid" ItemsSource="{Binding Users}" AutoGenerateColumns="True" SelectionChanged="DataGrid_SelectionChanged" />
                            </Border>
                        </StackPanel>
                        

                    </ContentControl>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- НИЖНЯЯ ПАНЕЛЬ БЫСТРЫХ ДЕЙСТВИЙ -->
        <Border Grid.Row="2" 
                Background="#0F172A"
                BorderBrush="#1E293B"
                BorderThickness="0,2,0,0">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <!-- КНОПКА НОВОЙ АРЕНДЫ -->
                <Button x:Name="btnQuickNewRental" 
                        Content="➕ НОВАЯ"
                        Style="{StaticResource QuickActionButtonStyle}"
                        Width="600"
                        Height="140"
                        Margin="-40,0,70,0"
                        Click="btnQuickNewRental_Click_1">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#10B981" Offset="0"/>
                            <GradientStop Color="#059669" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <!-- КНОПКА БЫСТРОГО ВОЗВРАТА -->
                <Button x:Name="btnQuickReturn" 
                        Content="↩️ ВОЗВРАТ"
                        Style="{StaticResource QuickActionButtonStyle}"
                        Width="600"
                        Height="140"
                        Margin="0,0,-40,0"
                        Click="btnQuickReturn_Click_1">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F59E0B" Offset="0"/>
                            <GradientStop Color="#D97706" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>