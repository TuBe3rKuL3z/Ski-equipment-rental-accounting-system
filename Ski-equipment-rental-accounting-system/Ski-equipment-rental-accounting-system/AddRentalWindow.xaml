<Window x:Class="Ski_equipment_rental_accounting_system.AddRentalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Ski_equipment_rental_accounting_system"
        Title="➕ Новая аренда"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- КРУПНЫЕ СТИЛИ ДЛЯ ПЛАНШЕТА -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Margin" Value="20,15,20,10"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="20,0,20,20"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="MinHeight" Value="70"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="20,0,20,20"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="MinHeight" Value="70"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="40,25"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="MinHeight" Value="80"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#64748B"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="30"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>

        <Style x:Key="LargeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="30"/>
        </Style>

        <!-- СТИЛЬ ДЛЯ TextBox С ПЛЕЙСХОЛДЕРОМ -->
        <Style x:Key="TextBoxWithPlaceholder" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <TextBlock x:Name="PlaceholderTextBlock"
                                      Text="{TemplateBinding Tag}"
                                      Foreground="#94A3B8"
                                      FontStyle="Italic"
                                      FontSize="24"
                                      Margin="20,0,0,0"
                                      VerticalAlignment="Center"
                                      IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate для клиентов -->
        <DataTemplate x:Key="ClientTemplate">
            <Border Padding="20" 
                    Margin="0,0,0,10"
                    Background="#F8FAFC"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#E2E8F0">
                <StackPanel>
                    <TextBlock Text="{Binding FullName}" 
                              FontSize="26"
                              FontWeight="Bold"/>
                    <TextBlock Text="{Binding DocumentInfo}" 
                              FontSize="22"
                              Foreground="#64748B"/>
                    <TextBlock Text="{Binding PhoneNumber}" 
                              FontSize="22"
                              Foreground="#64748B"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- DataTemplate для оборудования -->
        <DataTemplate x:Key="EquipmentTemplate">
            <Border Padding="20" 
                    Margin="0,0,0,10"
                    Background="#F8FAFC"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#E2E8F0">
                <StackPanel>
                    <TextBlock Text="{Binding InventoryNumber}" 
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="#2563EB"/>
                    <TextBlock Text="{Binding Type}" 
                              FontSize="22"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Brand}" 
                                  FontSize="22"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text=" - " 
                                  FontSize="22"/>
                        <TextBlock Text="{Binding Model}" 
                                  FontSize="22"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Размер: " 
                                  FontSize="22"/>
                        <TextBlock Text="{Binding Size}" 
                                  FontSize="22"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text=" | " 
                                  FontSize="22"
                                  Margin="10,0"/>
                        <TextBlock Text="{Binding DailyRentalPrice, StringFormat={} {0:C}/день}" 
                                  FontSize="22"
                                  Foreground="#10B981"
                                  FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#F1F5F9">
        <!-- ШАПКА -->
        <Border Background="#2563EB" Height="120">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- КНОПКА НАЗАД -->
                <Button x:Name="btnBack" 
                        Grid.Column="0"
                        Content="←" 
                        Style="{StaticResource BackButtonStyle}"
                        Click="btnBack_Click"
                        ToolTip="Вернуться назад"/>

                <!-- ЗАГОЛОВОК -->
                <TextBlock Grid.Column="1" 
                          Text="➕ НОВАЯ АРЕНДА" 
                          Foreground="White" 
                          FontSize="36"
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                <!-- ДАТА И ВРЕМЯ -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="0,0,30,0">
                    <TextBlock x:Name="txtDateTime" 
                              Text="01.01.2024 12:00"
                              Foreground="White" 
                              FontSize="22"
                              Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ОСНОВНОЕ СОДЕРЖИМОЕ С ПРОКРУТКОЙ -->
        <ScrollViewer Margin="0,120,0,150" 
                      VerticalScrollBarVisibility="Auto"
                      PanningMode="VerticalOnly">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ЛЕВАЯ КОЛОНКА - КЛИЕНТ И ОБОРУДОВАНИЕ -->
                <StackPanel Grid.Column="0" Margin="10">
                    <!-- ВЫБОР КЛИЕНТА -->
                    <Border Style="{StaticResource LargeCardStyle}">
                        <StackPanel>
                            <TextBlock Text="👤 ВЫБОР КЛИЕНТА" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <TextBlock Text="Поиск клиента:"/>
                            <TextBox x:Name="txtSearchClient" 
                                    Style="{StaticResource TextBoxWithPlaceholder}"
                                    Tag="Введите ФИО или телефон..."
                                    TextChanged="txtSearchClient_TextChanged"/>

                            <Border Height="2" Background="#E2E8F0" Margin="20,10"/>

                            <TextBlock Text="Доступные клиенты:" 
                                      Margin="20,20,20,10"/>

                            <ListView x:Name="listClients" 
                                     Height="400"
                                     SelectionChanged="listClients_SelectionChanged"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ItemTemplate="{StaticResource ClientTemplate}"/>

                            <Button x:Name="btnNewClient" 
                                   Content="➕ НОВЫЙ КЛИЕНТ" 
                                   Background="#10B981"
                                   Margin="20,20,20,0"
                                   Click="btnNewClient_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- ВЫБОР ОБОРУДОВАНИЯ -->
                    <Border Style="{StaticResource LargeCardStyle}" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🎿 ВЫБОР ОБОРУДОВАНИЯ" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal">
                                <ComboBox x:Name="cmbEquipmentFilter" 
                                         Width="300"
                                         SelectionChanged="cmbEquipmentFilter_SelectionChanged">
                                    <ComboBoxItem Content="Все типы"/>
                                    <ComboBoxItem Content="Лыжи"/>
                                    <ComboBoxItem Content="Ботинки"/>
                                    <ComboBoxItem Content="Сноуборд"/>
                                    <ComboBoxItem Content="Шлем"/>
                                </ComboBox>

                                <ComboBox x:Name="cmbStatusFilter" 
                                         Width="300"
                                         Margin="20,0,0,0"
                                         SelectionChanged="cmbStatusFilter_SelectionChanged">
                                    <ComboBoxItem Content="Только свободные"/>
                                    <ComboBoxItem Content="Все статусы"/>
                                </ComboBox>
                            </StackPanel>

                            <ListView x:Name="listEquipment" 
                                     Height="500"
                                     SelectionMode="Multiple"
                                     SelectionChanged="listEquipment_SelectionChanged"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ItemTemplate="{StaticResource EquipmentTemplate}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ПРАВАЯ КОЛОНКА - ДЕТАЛИ АРЕНДЫ -->
                <StackPanel Grid.Column="1" Margin="10">
                    <!-- ДАТЫ АРЕНДЫ -->
                    <Border Style="{StaticResource LargeCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📅 ДАТЫ АРЕНДЫ" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ДАТА НАЧАЛА -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Дата начала:"/>
                                    <DatePicker x:Name="dpStartDate" 
                                               SelectedDate="{x:Static sys:DateTime.Now}"
                                               FontSize="26"
                                               Margin="20,0,20,20"
                                               Padding="15"
                                               MinHeight="70"
                                               SelectedDateChanged="dpStartDate_SelectedDateChanged"/>
                                </StackPanel>

                                <!-- СТРЕЛОЧКА -->
                                <TextBlock Grid.Column="1" 
                                          Text="→" 
                                          FontSize="40"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"
                                          Margin="20,40,20,0"/>

                                <!-- ДАТА ОКОНЧАНИЯ -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Дата окончания:"/>
                                    <DatePicker x:Name="dpEndDate" 
                                               SelectedDate="{x:Static sys:DateTime.Now}"
                                               FontSize="26"
                                               Margin="20,0,20,20"
                                               Padding="15"
                                               MinHeight="70"
                                               SelectedDateChanged="dpEndDate_SelectedDateChanged"/>
                                </StackPanel>
                            </Grid>

                            <!-- КОЛИЧЕСТВО ДНЕЙ -->
                            <Border Background="#F0F9FF" 
                                    CornerRadius="10" 
                                    Padding="20"
                                    Margin="0,20,0,0">
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center">
                                    <TextBlock Text="Период аренды: " 
                                              FontSize="26"/>
                                    <TextBlock x:Name="txtRentalDays" 
                                              Text="1 день"
                                              FontSize="26"
                                              FontWeight="Bold"
                                              Foreground="#2563EB"
                                              Margin="10,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- СТОИМОСТЬ И СКИДКИ -->
                    <Border Style="{StaticResource LargeCardStyle}" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="💰 СТОИМОСТЬ" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <!-- СУММАРНАЯ СТОИМОСТЬ -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30">
                                <TextBlock Text="Общая стоимость: " 
                                          FontSize="28"/>
                                <TextBlock x:Name="txtTotalPrice" 
                                          Text="0 ₽"
                                          FontSize="28"
                                          FontWeight="Bold"
                                          Foreground="#10B981"
                                          Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- ПРОМОКОД -->
                            <StackPanel>
                                <TextBlock Text="Промокод:"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="txtDiscountCode" 
                                            Grid.Column="0"
                                            Style="{StaticResource TextBoxWithPlaceholder}"
                                            Tag="Введите промокод..."
                                            TextChanged="txtDiscountCode_TextChanged"/>

                                    <Button x:Name="btnApplyDiscount" 
                                           Grid.Column="1"
                                           Content="Применить"
                                           Background="#F59E0B"
                                           Margin="20,0,20,20"
                                           Width="200"
                                           Click="btnApplyDiscount_Click"/>
                                </Grid>
                            </StackPanel>

                            <!-- ИНФОРМАЦИЯ О СКИДКЕ -->
                            <Border x:Name="borderDiscountInfo" 
                                   Visibility="Collapsed"
                                   Background="#FEF3C7" 
                                   CornerRadius="10" 
                                   Padding="20"
                                   Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock x:Name="txtDiscountInfo" 
                                              Text=""
                                              FontSize="24"
                                              FontWeight="SemiBold"/>
                                    <Button x:Name="btnRemoveDiscount" 
                                           Content="❌ Убрать скидку"
                                           Background="#EF4444"
                                           Margin="0,10,0,0"
                                           Click="btnRemoveDiscount_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- ИТОГОВАЯ СТОИМОСТЬ -->
                            <Border Background="#DCFCE7" 
                                    CornerRadius="10" 
                                    Padding="30"
                                    Margin="0,30,0,0">
                                <StackPanel>
                                    <TextBlock Text="ИТОГО К ОПЛАТЕ:" 
                                              FontSize="30"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="txtFinalPrice" 
                                              Text="0 ₽"
                                              FontSize="48"
                                              FontWeight="Bold"
                                              Foreground="#059669"
                                              HorizontalAlignment="Center"
                                              Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- СПОСОБ ОПЛАТЫ -->
                    <Border Style="{StaticResource LargeCardStyle}" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="💳 СПОСОБ ОПЛАТЫ" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <RadioButton x:Name="rbCash" 
                                           Content="💵 Наличные"
                                           FontSize="26"
                                           Margin="20"
                                           GroupName="PaymentMethod"
                                           Checked="PaymentMethod_Checked"/>
                                <RadioButton x:Name="rbCard" 
                                           Content="💳 Карта"
                                           FontSize="26"
                                           Margin="20"
                                           GroupName="PaymentMethod"
                                           Checked="PaymentMethod_Checked"/>
                                <RadioButton x:Name="rbOnline" 
                                           Content="🌐 Онлайн"
                                           FontSize="26"
                                           Margin="20"
                                           GroupName="PaymentMethod"
                                           Checked="PaymentMethod_Checked"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- ПРЕДВАРИТЕЛЬНЫЙ ЧЕК -->
                    <Border Style="{StaticResource LargeCardStyle}" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🧾 ПРЕДВАРИТЕЛЬНЫЙ ЧЕК" 
                                      FontSize="30"
                                      FontWeight="Bold"
                                      Foreground="#2563EB"
                                      Margin="0,0,0,20"/>

                            <Border x:Name="spPreview" 
                                   Background="#F8FAFC"
                                   CornerRadius="10"
                                   Padding="30">
                                <!-- Информация будет заполняться динамически -->
                                <TextBlock x:Name="txtPreviewEmpty" 
                                          Text="Выберите клиента и оборудование"
                                          FontSize="24"
                                          Foreground="#64748B"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- НИЖНЯЯ ПАНЕЛЬ С КНОПКАМИ -->
        <Border Background="#1E293B" 
                Height="150" 
                VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Button x:Name="btnCancel" 
                       Content="❌ ОТМЕНА" 
                       Background="#EF4444"
                       Width="300"
                       Height="100"
                       Click="btnCancel_Click"/>

                <Button x:Name="btnSave" 
                       Content="✅ СОХРАНИТЬ АРЕНДУ" 
                       Background="#10B981"
                       Width="500"
                       Height="100"
                       Margin="50,0,0,0"
                       Click="btnSave_Click"/>

                <Button x:Name="btnSaveAndPrint" 
                       Content="🖨️ СОХРАНИТЬ И ПЕЧАТЬ" 
                       Background="#3B82F6"
                       Width="500"
                       Height="100"
                       Margin="50,0,0,0"
                       Click="btnSaveAndPrint_Click"/>
            </StackPanel>
        </Border>

        <!-- ИНДИКАТОР ЗАГРУЗКИ -->
        <Border x:Name="loadingOverlay" 
               Visibility="Collapsed"
               Background="#80000000" 
               Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Border Background="White" 
                       CornerRadius="20" 
                       Padding="40">
                    <StackPanel>
                        <TextBlock Text="Сохранение..." 
                                  FontSize="30"
                                  FontWeight="Bold"
                                  Margin="0,0,0,20"/>
                        <ProgressBar IsIndeterminate="True" 
                                    Height="20"
                                    Width="300"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>